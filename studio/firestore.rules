rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /public {
      // Animations are sequences of states that are interpolated
      match /animations/{animation} {
        // Anyone can view
        allow read: if true;

        // Only the owner can update
        allow write: 
          if request.auth.uid == resource.data.owner;
      }

      // States are individual configurations rendered as a still image
      match /states/{state} {
        // Anyone can view
        allow read: if true;

        // Only the owner can update
        allow write:
          if  request.auth.uid == resource.data.owner;
      }
    }

    match /users/{uid}/studio_documents/{docid} {
      allow read, write: if request.auth.uid == uid;
    }
  }
}